<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:background="@color/colorAccentLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo_full"
            android:layout_marginBottom="100dp"></ImageView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Pengguna"
            android:textAlignment="center"
            android:id="@+id/username"
            android:textSize="16sp"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#949494"
            android:ems="10"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kata Sandi"
            android:textAlignment="center"
            android:id="@+id/pass"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#949494"></EditText>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textSize="16sp"
            android:background="@color/colorPrimary"
            android:id="@+id/masuk_bt"
            android:layout_marginTop="20dp"></Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_alert"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="#949494"></TextView>

    </LinearLayout>

</RelativeLayout>